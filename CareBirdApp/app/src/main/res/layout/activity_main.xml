<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@drawable/bird"
    tools:context="com.dasl.android.carebird.app.MainActivity">

    <TextView
        android:id="@+id/PolyWelcome"
        android:text="Hello, my name is Dr. Poly and I will be assisting you today."
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:textSize="40dp"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:text="Main Menu"
        android:textSize="40dp"
        android:textColor="#FFFFFF"
        android:id="@+id/MainMenu"
        android:background="@drawable/button"
        android:layout_below="@+id/PolyWelcome"
        android:layout_alignLeft="@+id/PolyWelcome"
        android:layout_alignStart="@+id/PolyWelcome"
        android:layout_marginTop="20dp"
        android:layout_alignRight="@+id/PolyWelcome"
        android:layout_alignEnd="@+id/PolyWelcome" />

</RelativeLayout>
